@model IEnumerable<Ushtrime2ProvimGrupi1.Entities.Shkrimet>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<form asp-action="Index" asp-controller="Shkrimets" method="get">
    <label>Emri i kategorise</label>
    <input type="text" name="emri" />

    <input type="submit" value="Kerko" />
</form>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titulli)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Autori)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kategoria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titulli)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Autori.Emri)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kategoria.Emri)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
